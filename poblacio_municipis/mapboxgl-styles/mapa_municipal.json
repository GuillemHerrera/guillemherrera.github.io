        "text-halo-color": "#FFF",
        "text-halo-width": 1
       },
      "layout": {
        "text-font": ["Open Sans Bold"],
        "text-field": "{nom_muni}",
        "text-allow-overlap": false,
        "text-padding": 10,
        "text-size": 12
      }
    }
    
