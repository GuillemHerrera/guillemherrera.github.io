          "stops": [
            [0, "#ff0000"],
            [100, "#ffffcc"],
            [1000, "#ffeda0"],
            [2000, "#fed976"],
            [5000, "#feb24c"],
            [10000, "#fd8d3c"],
            [20000, "#fc4e2a"],
            [50000, "#e31a1c"],
            [100000, "#b10026"]
          ]
        }
      },
      "filter": ["==", "$type", "Polygon"]
    },     
    {
      "id": "1986",
      "type": "fill",
      "source": "municipis",
      "source-layer": "pob_municipis_INE_4326",
      "paint": {
        "fill-color": {
          "property": "1986",
          "type": "interval",
          "stops": [
            [0, "#ff0000"],
            [100, "#ffffcc"],
            [1000, "#ffeda0"],
            [2000, "#fed976"],
            [5000, "#feb24c"],
            [10000, "#fd8d3c"],
            [20000, "#fc4e2a"],
            [50000, "#e31a1c"],
            [100000, "#b10026"]
          ]
        }
